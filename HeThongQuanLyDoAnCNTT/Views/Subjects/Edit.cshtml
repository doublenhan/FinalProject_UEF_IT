@model HeThongQuanLyDoAnCNTT.DataAccess.Subject
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.ID_Teacher)
    @Html.HiddenFor(model => model.ID_Subject)
    @Html.HiddenFor(model => model.isDelete)
    @Html.HiddenFor(model => model.isSubmit)
    @Html.HiddenFor(model => model.isActive)
    @Html.HiddenFor(model => model.isDone)
    @Html.HiddenFor(model => model.IDSubjectType)
    @Html.HiddenFor(model => model.SubjectTarget)
    @Html.HiddenFor(model => model.Result)
    <div class="single-product-tab-area mg-tb-15">
        <!-- Single pro tab review Start-->
        <div class="single-pro-review-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="review-tab-pro-inner table-bordered">
                            @if (User.IsInRole("Teacher") == true)
                            {
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Tên đề tài</strong></i></span>
                                                        <i aria-hidden="true"><strong><input type="text" class="form-control" name="SubjectName" value="@Model.SubjectName" readonly></strong></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <table>
                                                            <tr>
                                                                <th>
                                                                    <span class="input-group-addon"><i><strong>Danh sách sinh viên</strong></i></span>
                                                                </th>
                                                            </tr>
                                                            @foreach (string item in ViewBag.StuList)
                                                            {
                                                                <tr class="form-control">
                                                                    <td>
                                                                        @item
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Giới thiệu</strong></i></span>
                                                        <i aria-hidden="true"><textarea name="Contents" class="form-control" rows="5" style="resize:none" readonly>@Model.Contents</textarea></i>
                                                    </div>
                                                </div>
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Nội dung</strong></i></span>
                                                        <i aria-hidden="true"><textarea name="Description" class="form-control" rows="10" style="resize:none" readonly> @Model.Description</textarea></i>
                                                    </div>
                                                </div>
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Ý kiến giảng viên</strong></i></span>
                                                        <textarea name="Feedback" class="form-control"
                                                                  placeholder="Ý Kiến của giảng viên hướng dẫn....."
                                                                  rows="5" style="resize:none">@Model.Feedback</textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        Lưu
                                                    </button>
                                                    <button type="button" onclick="window.location.href='/Subjects'" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        Trở về
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (User.IsInRole("Student") == true)
                            {
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Tên đề tài</strong></i></span>
                                                        <i aria-hidden="true"><strong><input type="text" class="form-control" name="SubjectName" value="@Model.SubjectName" readonly></strong></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Giảng viên hướng dẫn</strong></i></span>
                                                        <i aria-hidden="true"><strong><input type="text" class="form-control" name="TeacherName" value="@Model.Teacher.FullName" readonly></strong></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Trạng thái</strong></i></span>
                                                        @if (Model.isActive == true)
                                                        {
                                                            <i aria-hidden="true"><strong><input type="text" class="form-control" name="IsActive" value="Đã kích hoạt" readonly></strong></i>
                                                        }
                                                        else
                                                        {
                                                            <i aria-hidden="true"><strong><input type="text" class="form-control" name="IsActive" value="Chưa kích hoạt" readonly></strong></i>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Giới thiệu</strong></i></span>
                                                        <textarea name="Contents" class="form-control"
                                                                  placeholder="Giới thiệu đề tài....."
                                                                  rows="5" style="resize:none" required>@Model.Contents</textarea>
                                                    </div>
                                                </div>
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Nội dung</strong></i></span>
                                                        <textarea name="Description" class="form-control"
                                                                  placeholder="Nội dung đề tài....."
                                                                  rows="10" style="resize:none" required>@Model.Description</textarea>
                                                    </div>
                                                </div>
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i aria-hidden="true"><strong>Ý Kiến của giảng viên</strong></i></span>
                                                        <i aria-hidden="true"><textarea name="Feedback" class="form-control" rows="5" style="resize:none" readonly>@Model.Feedback</textarea></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        Lưu
                                                    </button>
                                                    <button type="button" onclick="window.location.href='/Subjects'" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        Trở về
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                        <input type="text" class="form-control" name="SubjectName" value="@Model.SubjectName" readonly>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                        <input type="text" class="form-control" name="SubjectDetails" @*value="@Model.SubjectDetails"*@ readonly>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                        <textarea name="Contents" class="form-control" rows="5" style="resize:none" readonly>@Model.Contents</textarea>
                                                    </div>
                                                </div>
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt" required>
                                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                        <textarea name="Description" class="form-control" rows="10" style="resize:none" readonly> @Model.Description</textarea>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-delicious" aria-hidden="true"></i></span>
                                                        <textarea name="Description" class="form-control"
                                                                  placeholder="Ý Kiến của giảng viên hướng dẫn....."
                                                                  rows="5" style="resize:none" required></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i>Trạng thái</span>
                                                        @Html.DisplayFor(modelItem => Model.isActive)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i> Xóa đề tài</span>
                                                        @Html.DisplayFor(modelItem => Model.isDelete)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-10">
                                                        Lưu
                                                    </button>
                                                    <button type="button" onclick="window.location.href='/Subjects'" class="btn btn-success">
                                                        Trở về
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

