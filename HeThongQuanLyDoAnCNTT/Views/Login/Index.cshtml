    <div class="color-line"></div> 
    <div class="container-fluid"    >
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-md-4 col-sm-4 col-xs-12">
                <div class="text-center m-b-md custom-login">
                    &nbsp;
                    <h3>KHOA CÔNG NGHỆ THÔNG TIN</h3>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        <form action="/Login/Login" method="post">
                            <div class="form-group">
                                <label class="control-label" for="username">Email</label>
                                <input type="email" placeholder="example@uef.edu.vn" title="Vui lòng nhập email" name="Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="password">Mật Khẩu</label>
                                <input type="password" title="Vui lòng nhập mật khẩu" placeholder="******" name="PassWord" class="form-control">
                            </div>
                            <button class="btn btn-success" type="submit">Đăng nhập</button>

                            <a class="btn btn-default btn-block" href="#">Quên mật khẩu</a>
                        </form>
                        <form action="@Url.Action("LoginWithGooglePlus", "Login")" method="post">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-bg-cl-google-tw" type="submit" style="background-color:deepskyblue"> &nbsp Google UEF </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
        </div>      
